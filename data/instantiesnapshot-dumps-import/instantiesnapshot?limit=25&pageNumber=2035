        {
          "naam": {
            "nl-BE-x-formal": "Rechtstreeks toegankelijke hulp",
            "nl-BE-x-generated-informal": "Rechtstreeks toegankelijke hulp",
            "nl": "Rechtstreeks toegankelijke hulp"
